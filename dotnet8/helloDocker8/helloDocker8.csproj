<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ContainerRepository>hellodotnet8.0</ContainerRepository>
    <ContainerRuntimeIdentifier>linux-arm64</ContainerRuntimeIdentifier>
    <ContainerBaseImage>mcr.microsoft.com/dotnet/runtime:8.0</ContainerBaseImage>
    <ContainerImageName>hungln8/hellodockerfromdotnet8</ContainerImageName>
    <ContainerRegistry>docker.io</ContainerRegistry>
  </PropertyGroup>
  <ItemGroup>
    <ContainerPort Include="5001" Type="tcp" />
    <ContainerEnvironmentVariable Include="ASPNETCORE_FORWARDEDHEADERS_ENABLED" Value="true" />
    <ContainerEnvironmentVariable Include="TZ" Value="Asia/Ho_Chi_Minh" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.11" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

</Project>
